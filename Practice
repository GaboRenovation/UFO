// LISTAS Y FUNCIONES
let friends = ["Sarah", "Greg", "Cindy", "Jeff"];

function listLoop(userList) {
   for (var i = 0; i < userList.length; i++) {
     console.log(userList[i]);
   }
}

console.log(listLoop(friends));




